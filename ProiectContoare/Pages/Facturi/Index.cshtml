@page
@model ProiectContoare.Pages.Facturi.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Înregistrează citire contor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].DataEmitere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].Suma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Factura[0].Contor)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Factura)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEmitere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contor.NumarSerie)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.FacturaId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.FacturaId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.FacturaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
