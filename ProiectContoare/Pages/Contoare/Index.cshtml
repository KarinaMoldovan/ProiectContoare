@page
@model ProiectContoare.Pages.Contoare.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contor[0].NumarSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contor[0].ValoareActuala)
            </th>
            <th>
                Email Consumator
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumarSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValoareActuala)
                </td>
                <td>
                    @item.Consumator?.Email
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ContorId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ContorId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ContorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

