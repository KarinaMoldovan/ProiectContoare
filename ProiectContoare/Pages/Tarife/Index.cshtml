@page
@model ProiectContoare.Pages.Tarife.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Actualizează tarif</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tarif[0].PretPeMetruCub)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarif[0].DataInceput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarif[0].DataSfarsit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tarif)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PretPeMetruCub)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInceput)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataSfarsit)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TarifId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TarifId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TarifId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
