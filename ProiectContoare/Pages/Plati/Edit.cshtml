@page
@model ProiectContoare.Pages.Plati.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plata</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Plata.PlataId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Plata.DataPlatii" class="control-label"></label>
                <input asp-for="Plata.DataPlatii" class="form-control" />
                <span asp-validation-for="Plata.DataPlatii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Plata.SumaPlatita" class="control-label"></label>
                <input asp-for="Plata.SumaPlatita" class="form-control" />
                <span asp-validation-for="Plata.SumaPlatita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Plata.ModalitateDePlata" class="control-label"></label>
                <select asp-for="Plata.ModalitateDePlata" class="form-control">
                    <option value="Numerar">Numerar</option>
                    <option value="CardBancar">Card Bancar</option>
                    <option value="TransferBancar">Transfer Bancar</option>
                </select>
                <span asp-validation-for="Plata.ModalitateDePlata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Plata.FacturaId" class="control-label"></label>
                <select asp-for="Plata.FacturaId" class="form-control" asp-items="ViewBag.FacturaId"></select>
                <span asp-validation-for="Plata.FacturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
